<h1>List of ads</h1>

<table>
<% @ads.each do |ad| %>
   <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

       <td>
          <%= image_tag(ad.image_url, class: 'list_image') %>
       </td>

<td class="list_description">
    <dl>
        <dt><%= ad.title %></dt>
        <dd><%= truncate(strip_tags(ad.description),
            length: 80) %></dd>
    </dl>
  </td>
  <td class="list_actions">
    <%= link_to 'Show', ad %><br/>
    <%= link_to 'Edit', edit_ad_path(ad) %><br/>
    <%= link_to 'Destroy', ad, method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
<% end %>
</table>
<br />
<%= link_to 'New ad', new_ad_path %>
